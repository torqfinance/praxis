    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            const initCharts = () => {
                const chartTextColor = '#D4D4D4'; // neutral-300 for dark mode
                const accentColor = 'rgba(217, 119, 6, 1)'; // Rich Amber 700

                const demandCtx = document.getElementById('demandChart')?.getContext('2d');
                if (demandCtx) {
                    new Chart(demandCtx, {
                        type: 'line',
                        data: {
                            labels: ['2022', '2023', '2024', '2025', '2026', '2027', '2028', '2029', '2030'],
                            datasets: [{
                                label: 'Compute Demand (Zettaflops)',
                                data: [12, 19, 30, 45, 68, 100, 150, 225, 330], // Extended and exponential data
                                backgroundColor: 'rgba(217, 119, 6, 0.2)',
                                borderColor: accentColor,
                                borderWidth: 2,
                                fill: true,
                                tension: 0.4
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: { display: false },
                                tooltip: {
                                    mode: 'index',
                                    intersect: false,
                                    callbacks: {
                                        label: (context) => `${context.dataset.label}: ${context.parsed.y}`
                                    }
                                }
                            },
                            scales: {
                                x: {
                                    ticks: { color: chartTextColor },
                                    grid: { color: 'rgba(255, 255, 255, 0.1)' }
                                },
                                y: {
                                    beginAtZero: true,
                                    title: { display: true, text: 'Compute Demand', color: chartTextColor },
                                    ticks: { color: chartTextColor },
                                    grid: { color: 'rgba(255, 255, 255, 0.1)' }
                                }
                            }
                        }
                    });
                }

                const costCtx = document.getElementById('costChart')?.getContext('2d');
                if (costCtx) {
                    new Chart(costCtx, {
                        type: 'bar',
                        data: {
                            labels: ['Unscheduled Downtime Loss', 'Cooling Inefficiency Waste'],
                            datasets: [{
                                label: 'Annual Cost (Millions $)',
                                data: [25.0, 17.5], // Scaled for 50 MW (5x the 10 MW figures)
                                backgroundColor: [
                                    'rgba(239, 68, 68, 0.7)', // Red for penalties
                                    'rgba(217, 119, 6, 0.7)' // Amber for waste
                                ],
                                borderColor: [
                                    'rgba(239, 68, 68, 1)',
                                    'rgba(217, 119, 6, 1)'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: { display: false },
                                tooltip: {
                                    callbacks: {
                                        label: (context) => `${context.dataset.label}: $${context.parsed.y}M`
                                    }
                                }
                            },
                            scales: {
                                x: {
                                    ticks: { color: chartTextColor },
                                    grid: { color: 'rgba(255, 255, 255, 0.1)' }
                                },
                                y: {
                                    beginAtZero: true,
                                    title: { display: true, text: 'Annual Cost (Millions $)', color: chartTextColor },
                                    ticks: { color: chartTextColor },
                                    grid: { color: 'rgba(255, 255, 255, 0.1)' }
                                }
                            }
                        }
                    });
                }
            };
            
            const initSmoothScroll = () => {
                document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', function (e) {
                        e.preventDefault();
                        const targetId = this.getAttribute('href');
                        const targetElement = document.querySelector(targetId);
                        if(targetElement) {
                            window.scrollTo({
                                top: targetElement.offsetTop,
                                behavior: "smooth"
                            });
                        }
                    });
                });
            };

            initCharts();
            initSmoothScroll();
        });
    </script>
